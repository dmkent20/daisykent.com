<div class="row">
    <div id="content">
        <h1 id="page-header">Home</h1>
    </div>
</div>
<div class="container">
    <% if @posts.any? %>
    <div class="row">
        <% @posts[0..2].each do |post| %>
            <div id="content" class="col-sm-4">
                <div class="header"><%= image_tag post.blogheader.thumb.url %></div>
                <h2><%= post.title %></h2>
                <p><%= truncate(post.content, :length => 300) %>
                    <%= link_to '(continue)', 'blogpost/' + post.id.to_s %></p>
            </div>
        <% end %>
    </div>
    <% else %>
    <p>
        There are currently no posts :disappointed:
    </p>
    <% end %>
</div>
