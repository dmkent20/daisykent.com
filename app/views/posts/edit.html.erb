<%= form_for @post do |f| %>
  <%= f.label :blogheader %>
  <%= f.file_field :blogheader %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
  <% for category in Category.all %>
    <div class="">
      <%= check_box_tag "post[category_ids][]", category.id, @post.categories.include?(category), { id: dom_id(category, dom_id(@post)) } %>
      <%= category.name %>
    </div>
  <% end %>
<% end %>
