<%= form_for @post do |f| %>
  <%= f.label :blogheader %>
  <%= f.file_field :blogheader %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <ul id="categories">
    <%= render @categories %>
  </ul>
  <%= f.submit "Post!" %>
<% end %>


<%= form_for @category, remote: true do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
